  <script defer src="https://cdn.tailwindcss.com"></script>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      width: 100%;
    }
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
    }
    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 0.5rem;
    }
    .icon-container {
      display: flex;
      gap: 1rem;
    }
    .icon-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 2.5rem;
      height: 2.5rem;
      background-color: rgba(255, 255, 255, 0.3);
      border-radius: 8px;
      transition: background-color 0.2s;
    }
    .icon-wrapper:hover {
      background-color: rgba(255, 255, 255, 0.5);
    }
    .icon {
      font-size: 1.3rem;
      line-height: 1;
    }
    .mobile-menu {
      display: flex;
      flex-direction: column;
      cursor: pointer;
      padding: 0.5rem;
    }
    .mobile-menu span {
      width: 25px;
      height: 3px;
      background-color: #000;
      margin: 2px 0;
      transition: 0.3s;
    }
    .mobile-nav {
      display: none;
      position: absolute;
      top: 100%;
      right: 0;
      background-color: #DDE5DD;
      width: 100%;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      z-index: 1000;
    }
    .mobile-nav.active {
      display: block;
    }
    .mobile-nav .icon-container {
      flex-direction: column;
      padding: 1rem;
      gap: 0.5rem;
    }
    .mobile-nav .icon-wrapper {
      width: 100%;
