        <div class="discussion-info">
          <div class="discussion-title">Kitchen Equipment</div>
          <div class="discussion-overview">Essential tools and gear recommendations for home cooks</div>
        </div>
      </div>

      <!-- Discussion Card 4 -->
      <div class="discussion-card">
        <div class="discussion-image"></div>
        <div class="discussion-info">
          <div class="discussion-title">Meal Prep Ideas</div>
          <div class="discussion-overview">Weekly planning and batch cooking strategies</div>
        </div>
      </div>

      <!-- Discussion Card 5 -->
      <div class="discussion-card">
        <div class="discussion-image"></div>
        <div class="discussion-info">
          <div class="discussion-title">International Cuisine</div>
          <div class="discussion-overview">Exploring dishes and techniques from around the world</div>
        </div>
      </div>

      <!-- Discussion Card 6 -->
      <div class="discussion-card">
        <div class="discussion-image"></div>
        <div class="discussion-info">
          <div class="discussion-title">Dietary Restrictions</div>
          <div class="discussion-overview">Cooking for gluten-free, dairy-free, and other dietary needs</div>
        </div>
      </div>

      <!-- Discussion Card 7 -->
      <div class="discussion-card">
        <div class="discussion-image"></div>
        <div class="discussion-info">
          <div class="discussion-title">Baking Techniques</div>
          <div class="discussion-overview">Perfecting breads, pastries, and dessert recipes</div>
        </div>
      </div>

      <!-- Discussion Card 8 -->
      <div class="discussion-card">
        <div class="discussion-image"></div>
        <div class="discussion-info">
          <div class="discussion-title">Food Photography</div>
          <div class="discussion-overview">Tips for styling and photographing your culinary creations</div>
        </div>
      </div>

      <!-- Discussion Card 9 -->
      <div class="discussion-card">
        <div class="discussion-image"></div>
        <div class="discussion-info">
          <div class="discussion-title">Sustainable Cooking</div>
          <div class="discussion-overview">Reducing food waste and eco-friendly kitchen practices</div>
        </div>
      </div>
    </div>

    <!-- More cards can be added here for infinite scrolling -->
    <div class="discussion-grid" id="more-discussions" style="display: none;">
      <!-- Additional discussion cards will be loaded here -->
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Simple infinite scroll implementation
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Simulate loading more content
            setTimeout(() => {
              loadMoreDiscussions();
            }, 1000);
          }
        });
      });

      // Create a sentinel element for observing
      const sentinel = document.createElement('div');
      sentinel.id = 'scroll-sentinel';
      document.querySelector('.discussion-grid').after(sentinel);
      observer.observe(sentinel);
    });

    function loadMoreDiscussions() {
      // This would typically fetch data from an API
      // For now, we'll just show a message
      console.log('Loading more discussions...');
      // In a real implementation, you would:
      // 1. Fetch more discussion data
      // 2. Create new discussion cards
      // 3. Append them to the grid
    }
  </script>
</body>
</html>