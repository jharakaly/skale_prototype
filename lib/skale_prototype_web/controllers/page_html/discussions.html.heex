    <!-- Discussions Grid -->
    <div class="discussion-grid">
      <!-- Discussion Card 1 - Now linked to groups page -->
      <a href="groups" class="discussion-card">
        <div class="discussion-image"></div>
        <div class="discussion-info">
          <div class="discussion-title">Vegan Recipe Tips</div>
